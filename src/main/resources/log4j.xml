<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!--Commented as logs are being generated to File -->
	<appender name="fileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${log4j.fileLog}" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} [%-5p] %c {%F:%L} - %m%n" />
			<!-- <param name="ConversionPattern" value="%d{DATE} %m%n" /> -->
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>

	<logger name="com.ispf">
		<level value="${log4j.loglevel}" />
		<appender-ref ref="${log4j.consoleFileAppender}" />
	</logger>
</log4j:configuration>